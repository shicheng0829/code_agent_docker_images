FROM ubuntu:22.04

# 避免在安装过程中出现交互式提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建依赖项和开发工具
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    python3 \
    vim \
    gdb \
    valgrind \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制源代码到容器中
COPY . .

# 构建项目
RUN cmake -E remove_directory build && \
    cmake -B build -S . -DCMAKE_BUILD_TYPE=Debug && \
    cmake --build build -j$(nproc)

# 默认命令：运行测试
CMD ["sh", "-c", "cd build && ctest --output-on-failure"]

# 开发说明：
# 1. 构建镜像: docker build -t inja-dev -f Dockerfile.dev .
# 2. 运行测试: docker run --rm inja-dev
# 3. 交互式开发: docker run -it --rm -v $(pwd):/app inja-dev bash
# 4. 重新构建: 在容器内执行 cmake --build build
# 5. 运行特定测试: 在容器内执行 cd build && ./inja_test