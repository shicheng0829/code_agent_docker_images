FROM ubuntu:20.04

# 避免在安装过程中出现交互式提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建依赖项
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    && rm -rf /var/lib/apt/lists/*

# 创建工作目录
WORKDIR /app

# 复制源代码到容器中
COPY . .

# 构建FlatBuffers编译器和库以及测试
RUN mkdir build && cd build && \
    cmake -G "Unix Makefiles" -DFLATBUFFERS_BUILD_TESTS=ON .. && \
    make -j$(nproc) flattests

# 默认运行测试
CMD ["bash", "-c", "cd build && ./flattests"]