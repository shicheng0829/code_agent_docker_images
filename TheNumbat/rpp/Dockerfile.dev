FROM ubuntu:22.04

# 避免交互式安装
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建依赖和开发工具
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    lsb-release \
    software-properties-common \
    cmake \
    make \
    build-essential \
    git \
    vim \
    gdb \
    valgrind \
    && rm -rf /var/lib/apt/lists/*

# 安装Clang 17
RUN wget https://apt.llvm.org/llvm.sh && \
    chmod +x llvm.sh && \
    ./llvm.sh 17 && \
    rm llvm.sh

# 创建非root用户
RUN useradd -ms /bin/bash developer
USER developer
WORKDIR /home/developer

# 设置工作目录
WORKDIR /app

# 复制源代码
COPY --chown=developer:developer . .

# 构建项目
RUN cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug -DRPP_TEST=ON -DCMAKE_CXX_COMPILER=clang++-17 && \
    cmake --build build -- -j

# 默认运行测试
CMD ["ctest", "--test-dir", "build", "--output-on-failure"]