FROM ubuntu:22.04

# 避免在安装过程中出现交互式提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建依赖项
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制源代码
COPY . .

# 构建项目
RUN cmake -B build -DCMAKE_BUILD_TYPE=Debug && \
    cmake --build build -j$(nproc)

# 运行测试
CMD ["cmake", "--build", "build", "--target", "test"]