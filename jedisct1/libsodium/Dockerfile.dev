FROM ubuntu:20.04

# 避免在安装过程中出现交互提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建依赖项
RUN apt-get update && apt-get install -y \
    build-essential \
    libtool \
    autoconf \
    automake \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制源代码到容器中
COPY . .

# 初始化构建系统并配置项目
RUN ./autogen.sh -s && \
    env CPPFLAGS="-DDEV_MODE=1" ./configure --disable-dependency-tracking

# 构建项目
RUN make -j$(nproc)

# 提供一个交互式shell用于开发
CMD ["/bin/bash"]