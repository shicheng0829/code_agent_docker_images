FROM ubuntu:20.04

# 避免在安装过程中出现交互提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装运行时依赖项
RUN apt-get update && apt-get install -y \
    libasound2 \
    libpulse0 \
    libjack-jackd2-0 \
    && rm -rf /var/lib/apt/lists/*

# 创建工作目录
WORKDIR /app

# 复制构建好的库文件
COPY --from=libsoundio-dev /app/build/libsoundio.so* /usr/lib/
COPY --from=libsoundio-dev /app/soundio/ /usr/include/soundio/

# 设置默认命令
CMD ["/bin/bash"]