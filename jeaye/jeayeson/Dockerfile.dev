FROM ubuntu:18.04

# 安装依赖项和开发工具
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    libboost-all-dev \
    git \
    vim \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制项目文件
COPY . .

# 初始化子模块
RUN git submodule update --init --recursive

# 配置项目
RUN ./configure

# 编译测试
RUN make

# 默认命令是运行测试
CMD ["make", "test"]

# 提供一个交互式shell用于开发
RUN echo 'echo "Welcome to JeayeSON development environment!"' >> /root/.bashrc