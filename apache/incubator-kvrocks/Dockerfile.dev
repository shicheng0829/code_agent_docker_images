FROM ubuntu:22.04

# Avoid prompts from apt
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies required for building and testing
RUN apt-get update && apt-get upgrade -y && \
    apt-get install -y --no-install-recommends \
    git \
    build-essential \
    cmake \
    libtool \
    python3 \
    python3-pip \
    libssl-dev \
    clang \
    curl \
    wget \
    autoconf \
    automake \
    ninja-build \
    redis-tools && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install Go for Go test cases
RUN curl -O https://dl.google.com/go/go1.21.0.linux-amd64.tar.gz && \
    tar -C /usr/local -xzf go1.21.0.linux-amd64.tar.gz && \
    rm go1.21.0.linux-amd64.tar.gz
ENV PATH="/usr/local/go/bin:${PATH}"

# Install redis for testing
RUN curl -O https://download.redis.io/releases/redis-6.2.14.tar.gz && \
    tar -xzvf redis-6.2.14.tar.gz && \
    cd redis-6.2.14 && \
    make -j$(nproc) redis-cli && \
    make -j$(nproc) redis-server && \
    cp src/redis-cli /usr/local/bin/ && \
    cp src/redis-server /usr/local/bin/ && \
    cd .. && \
    rm -rf redis-6.2.14*

# Set working directory
WORKDIR /kvrocks

# Copy the source code
COPY . .

# Build kvrocks with unittest support
RUN ./x.py build --unittest -j $(nproc)

# Install redis-py for Python tests
RUN pip3 install redis==5.2.0

# Expose default port
EXPOSE 6666

# Default command to run unit tests
CMD ["./x.py", "test", "cpp"]