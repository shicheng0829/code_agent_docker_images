FROM ubuntu:20.04

# 避免在安装过程中出现交互提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建工具、开发工具和依赖项
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    libboost-all-dev \
    clang \
    git \
    gdb \
    valgrind \
    vim \
    nano \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制源代码到容器中
COPY . .

# 构建项目
RUN ./run_tests.sh --toolset=gcc

# 默认命令：进入交互式bash shell
CMD ["/bin/bash"]