FROM ubuntu:18.04

# 安装构建依赖
RUN apt-get update && apt-get install -y \
    build-essential \
    libpulse-dev \
    libasound2-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制项目文件
COPY . .

# 构建测试程序
WORKDIR /app/examples/Standalone/Linux
RUN make AUDIO_API=LINUX_PULSE

# 默认运行测试
CMD ["./demo"]