FROM ubuntu:20.04

# 避免在安装过程中出现交互式提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建依赖项
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    libglew-dev \
    libgl1-mesa-dev \
    libglu1-mesa-dev \
    libx11-dev \
    libxext-dev \
    libxmu-dev \
    libxi-dev \
    libxxf86vm-dev \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制源代码到容器中
COPY . .

# 构建项目和运行单元测试
RUN mkdir build && cd build && \
    cmake .. -DCMAKE_BUILD_TYPE=Release -DBUILD_PYBULLET=OFF -DBUILD_UNIT_TESTS=ON && \
    make -j$(nproc) && \
    ctest -C Release --output-on-failure

# 默认命令运行单元测试
CMD ["sh", "-c", "cd build && ctest -C Release --output-on-failure"]