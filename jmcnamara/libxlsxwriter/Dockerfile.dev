FROM ubuntu:20.04

# 避免在安装过程中出现交互提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建依赖项和开发工具
RUN apt-get update && apt-get install -y \
    build-essential \
    make \
    gcc \
    zlib1g-dev \
    python3 \
    python3-pip \
    git \
    vim \
    valgrind \
    && rm -rf /var/lib/apt/lists/*

# 安装Python测试依赖项
RUN pip3 install pytest

# 创建工作目录
WORKDIR /app

# 默认命令：保持容器运行
CMD ["tail", "-f", "/dev/null"]