FROM ubuntu:20.04

# 避免在安装过程中出现交互提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建依赖和开发工具
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    pkg-config \
    libtool \
    automake \
    autoconf \
    clang \
    git \
    vim \
    gdb \
    valgrind \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制源代码到容器中
COPY . .

# 构建项目
RUN mkdir build && cd build && \
    cmake -Dbuild_tests=ON .. && \
    cmake --build . --parallel

# 默认运行测试
CMD ["sh", "-c", "cd build && ctest --output-on-failure"]

# 开发环境入口点
# 可以使用以下命令进入开发环境：
# docker run -it --rm -v $(pwd):/app bdwgc-dev bash