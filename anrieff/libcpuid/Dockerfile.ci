FROM ubuntu:22.04

# 避免在安装过程中出现交互提示
ENV DEBIAN_FRONTEND=noninteractive

# 安装构建依赖项
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制源代码到容器中
COPY . .

# 构建项目并启用测试
RUN cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug -DLIBCPUID_ENABLE_TESTS=ON && \
    cmake --build build

# 运行测试作为构建过程的一部分
RUN make -C build test-old

# 默认命令：进入bash shell
CMD ["/bin/bash"]